{
  "family": "ig-notification",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::ACCOUNT_ID:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::ACCOUNT_ID:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "ig-notification",
      "image": "ACCOUNT_ID.dkr.ecr.ap-northeast-2.amazonaws.com/ig-notification:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8101,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "PHASE",
          "value": "alpha"
        },
        {
          "name": "AWS_DEFAULT_REGION",
          "value": "ap-northeast-2"
        },
        {
          "name": "LOG_LEVEL",
          "value": "INFO"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/ig-notification",
          "awslogs-region": "ap-northeast-2",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://127.0.0.1:8101/api/health || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 40
      }
    }
  ]
}

